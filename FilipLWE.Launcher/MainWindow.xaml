<Window x:Class="FilipLWE.Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FilipLWE Launcher" Height="250" Width="400"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="IpAddressText" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,10"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10" RenderTransformOrigin="0.5,0.5">
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-2.488"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.651"/>
                </TransformGroup>
            </StackPanel.RenderTransform>
            <Button Content="NASTAV" Width="80" Margin="5" Click="BtnNastav_Click"/>
            <Button Content="START" Width="80" Margin="5" Click="BtnStart_Click"/>
            <Button Content="STOP" Width="80" Margin="5" Click="BtnStop_Click"/>
            <Button Content="STATUS" Width="80" Margin="5" Click="BtnStatus_Click"/>
            <Button Content="KONIEC" Width="80" Margin="5" Click="BtnKoniec_Click"/>

        </StackPanel>
    </Grid>
</Window>
